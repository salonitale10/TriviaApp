<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.trivia.saloni.quizapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.trivia.saloni.quizapp.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.trivia.saloni.quizapp.SummaryActivity"></activity>
        <activity android:name="com.trivia.saloni.quizapp.MainActivity">

        </activity>
        <activity android:name="com.trivia.saloni.quizapp.QuestionsActivity">
            <intent-filter>
                <action android:name="com.trivia.saloni.quizapp.QuestionsActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.trivia.saloni.quizapp.HistoryActivity" />
    </application>

</manifest>